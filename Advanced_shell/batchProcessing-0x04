#!/bin/bash

# List of Pokémon
POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# API base URL
BASE_URL="https://pokeapi.co/api/v2/pokemon"

# Output directory
OUTPUT_DIR="pokemon_data"
ERROR_FILE="errors.txt"

# Create directories/files if they don't exist
mkdir -p "$OUTPUT_DIR"
> "$ERROR_FILE"

# Function to fetch Pokémon data
fetch_pokemon() {
    local pokemon=$1
    local url="$BASE_URL/$pokemon"

    echo "Fetching data for $pokemon..."
    RESPONSE=$(curl -s -w "%{http_code}" -o "$OUTPUT_DIR/$pokemon.json" "$url")

    if [ "$RESPONSE" -eq 200 ]; then
        echo "Saved data to $OUTPUT_DIR/$pokemon.json ✅"
    else
        echo "$(date) - Failed to fetch data for $pokemon (HTTP $RESPONSE)" >> "$ERROR_FILE"
        rm -f "$OUTPUT_DIR/$pokemon.json"
    fi
}

# Fetch each Pokémon in parallel
for pokemon in "${POKEMON_LIST[@]}"; do
    fetch_pokemon "$pokemon" &
done

# Wait for all background processes to complete
wait

echo "All Pokémon data retrieval completed."
